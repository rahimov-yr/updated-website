{
  "name": "water-conference-2026",
  "version": "1.0.0",
  "description": "Water Conference 2026 - Full Stack Application",
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,yellow\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cargo run",
    "build": "cd frontend && npm run build",
    "install:all": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "recharts": "^3.7.0",
    "sqlite3": "^5.1.7"
  }
}
