# Water Conference Backend Environment Variables
# Copy this file to .env and fill in your values

# IMPORTANT: Generate a secure random string for JWT_SECRET
# You can generate one with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# Server configuration (Docker handles this)
SERVER_ADDR=0.0.0.0:3000

# Database (SQLite - no changes needed)
DATABASE_URL=sqlite:./data/conference.db?mode=rwc

# Logging level
RUST_LOG=info

# Environment
ENVIRONMENT=production
